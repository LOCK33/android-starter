<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".sample.FormFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space"
            android:orientation="vertical">

            <EditText
                android:id="@+id/form_input1"
                style="@style/Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                style="@style/Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                style="@style/Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Disabled" />

            <Spinner
                style="@style/InputSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/ddl"
                android:focusable="true"
                android:focusableInTouchMode="true"></Spinner>

            <Spinner
                style="@style/InputSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/ddl"
                android:focusable="true"
                android:focusableInTouchMode="true"></Spinner>

            <Button
                android:id="@+id/form_submit1"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"></Button>

            <Button
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Disabled" />

            <Button
                style="@style/ButtonAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                style="@style/ButtonAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Disabled" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/CircleButtonPrimary"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="Button" />

                <Button
                    style="@style/CircleButtonPrimary"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:enabled="false"
                    android:text="Disabled" />

                <Button
                    style="@style/CircleButtonAccent"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="Button" />

                <Button
                    style="@style/CircleButtonAccent"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:enabled="false"
                    android:text="Disabled" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>