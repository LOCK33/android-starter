<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sample.TableFragment">

    <net.bndy.ad.framework.ui.TableView xmlns:table="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorLightDark"
        android:showDividers="beginning"
        android:dividerHeight="1dp"
        table:tableView_headerColor="@color/colorBorder" />
    <TextView
        android:id="@+id/empty_data_indicator"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/no_data"/>
</android.support.constraint.ConstraintLayout>