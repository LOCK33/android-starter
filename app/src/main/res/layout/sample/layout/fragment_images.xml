<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sample.ImagesFragment">

    <net.bndy.ad.framework.ui.TabLayout
        android:id="@+id/sample_images_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorDark"
        android:paddingLeft="@dimen/space"
        android:paddingRight="@dimen/space"
        app:tl_iconVisible="false"
        app:tl_indicator_margin_left="@dimen/space"
        app:tl_indicator_margin_right="@dimen/space"
        app:tl_indicator_style="BLOCK"
        app:tl_indicator_color="@color/colorAccent"
        ></net.bndy.ad.framework.ui.TabLayout>

    <LinearLayout
        android:id="@+id/sample_images_tabcontent_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/sample_images_tabs"
        app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>

</android.support.constraint.ConstraintLayout>