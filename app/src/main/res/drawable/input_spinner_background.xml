<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="@dimen/input_shadow"
                        android:top="@dimen/input_shadow"
                        android:right="@dimen/input_shadow"
                        android:bottom="@dimen/input_shadow"/>
                    <corners android:radius="@dimen/radius"></corners>
                    <solid android:color="@color/colorPrimaryLight"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="@dimen/input_border"
                        android:top="@dimen/input_border"
                        android:right="@dimen/input_border"
                        android:bottom="@dimen/input_border"/>
                    <corners android:radius="@dimen/radius_sm"></corners>
                    <solid android:color="@color/colorPrimaryDark"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:top="5dp" android:bottom="5dp"></padding>
                    <corners android:radius="@dimen/radius_xs"></corners>
                    <solid android:color="@android:color/white"></solid>
                </shape>
            </item>
            <item >
                <bitmap android:gravity="center|right" android:src="@drawable/icon_arrow_down" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="@dimen/input_shadow"
                        android:top="@dimen/input_shadow"
                        android:right="@dimen/input_shadow"
                        android:bottom="@dimen/input_shadow"/>
                    <corners android:radius="@dimen/radius"></corners>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="@dimen/input_border"
                        android:top="@dimen/input_border"
                        android:right="@dimen/input_border"
                        android:bottom="@dimen/input_border"/>
                    <corners android:radius="@dimen/radius_sm"></corners>
                    <solid android:color="@color/colorBorder"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:top="5dp" android:bottom="5dp"></padding>
                    <corners android:radius="@dimen/radius_xs"></corners>
                    <solid android:color="@android:color/white"></solid>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/icon_arrow_down" />
            </item>
        </layer-list>
    </item>
</selector>

